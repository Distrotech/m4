m4_define([AT_CHECK_M4],
[AT_CHECK([M4PATH=$srcdir:$srcdir/../examples $M4 -M ../../modules -d $1],
          [m4_default([$2], [0])],
          [$3], [stderr])
AT_CHECK([[sed 's,^[^:]*[lt-]*m4[.ex]*:,m4:,' stderr >&2]], 0, [], [$4])
])

